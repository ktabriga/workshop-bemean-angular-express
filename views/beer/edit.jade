h2
  | {{ cerveja.name }}

h1 {{msg}}

form(action="", method="post")
  label
    input(
      type="text", 
      name="name", 
      value=""
      placeholder="name", 
      data-ng-model="cerveja.name")
  label
    input(
      type="text", 
      name="type", 
      placeholder="type", 
      data-ng-model="cerveja.type")
  label
    textarea(
      name="description", 
      placeholder="description", 
      data-ng-model="cerveja.description")
      {{cerveja.description}}
  input(type="hidden",
        name="_id", 
        data-ng-model="cerveja._id")

  button.btn.btn-salvar(data-ng-click="salvar()") SALVAR
  button.btn.btn-deleter(data-ng-click="deletar()") DELETAR

  h3 Alterações
  ul
    li(ng-repeat="cerveja in cervejas")
      {{ cerveja.name }} - {{ cerveja.type }}