h2 {{ msg }}

form(action="", method="post")
  label
    input(
      type="text", 
      name="name", 
      value="{{ cerveja.name }}"
      placeholder="name",  
      data-ng-model="form.name")
  label
    input(
      type="text", 
      name="type", 
      placeholder="type", 
      data-ng-model="form.type")
  label
    textarea(
      name="description", 
      placeholder="description", 
      data-ng-model="form.description")

  button.btn.btn-salvar(data-ng-click="criar()") CRIAR

button(data-ng-click="listar()")
  | Listar

input(type="text", data-ng-model="search")
ul
  li(data-ng-repeat="cerveja in cervejas | orderBy: 'name':true | filter:search ", ng-animate="{enter: 'animate-enter', leave: 'animate-leave'}")
    {{ cerveja.name }} - {{ cerveja.type }} - 
    a(href="/beers/{{ cerveja._id }}")
      | Edit